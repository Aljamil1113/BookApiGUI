@model BookApi.Model.Country
@{
    ViewData["Title"] = "CreateCountry";
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<h2>Add New Country</h2>
<form asp-controller="Countries" asp-action="CreateCountry" method="post">
    <div class="form-group">
        <div>
            <label asp-for="Name">Country Name:</label>
        </div>      
        <div>
            <input class="form-control" asp-for="Name" />
        </div>
         <br/>
        <input type="submit" class="btn btn-sm btn-primary" value="Create" />
    </div>
</form>