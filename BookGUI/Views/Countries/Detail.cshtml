@model BookApi.Dtos.CountryDto
@{
    ViewData["Title"] = "Detail";
}

<h4>@ViewBag.Message</h4>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<div>
    <h2>Country Detail</h2>
    <br/>
    <div>
        <p>
            <strong>Country Name:</strong> @Model.Name
        <form class="form-group text-center">
            <a class="btn btn-sm btn-primary" asp-controller="Countries" asp-action="EditCountry" asp-route-countryId="@Model.Id">Edit</a>
            <a class="btn btn-sm btn-danger" asp-controller="Countries" asp-action="DeleteCountry" asp-route-countryId="@Model.Id">Delete</a>
        </form>
        </p>
    </div>
</div>
