@model BookApi.Model.Reviewer
@{
    ViewData["Title"] = "CreateReviewer";
}
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<h2>Add New Reviewer</h2>

<form asp-controller="Reviewers" asp-action="CreateReviewer" method="post">
    <div class="form-group">
    <div>
        <label asp-for="FirstName">First Name:</label>
    </div>
    <div>
        <input class="form-control" asp-for="FirstName" />
    </div>
    <br/>
    <div>
        <label asp-for="LastName">Last Name:</label>
    </div>
    <div>
        <input class="form-control" asp-for="LastName" />
    </div>
    <br/>
    <input type="submit" class="btn btn-sm btn-primary" value="Create"/>
    </div> 
</form>