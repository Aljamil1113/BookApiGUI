@model BookApi.Dtos.ReviewerDto
@{
    ViewData["Title"] = "Edit";
}
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<h2>Edit Reviewer</h2>

<form asp-controller="Reviewers" asp-action="Edit" asp-route-reviewerId="@Model.Id">
    <input hidden asp-for="@Model.Id"/>
    <div class="form-group">
        <div>
            <label asp-for="FirstName">First Name:</label>
        </div>
        <div>
            <input type="text" asp-for="FirstName" class="form-control" />
        </div>
        <div>
            <label asp-for="LastName">Last Name:</label>
        </div>
        <div>
            <input type="text" asp-for="LastName" class="form-control" />
        </div>
        <input type="submit" class="btn btn-sm btn-primary" value="Save" />
    </div>
</form>
<a asp-controller="Reviewers" asp-action="DetailReviewer" asp-route-reviewerId="@Model.Id" >Cancel</a>